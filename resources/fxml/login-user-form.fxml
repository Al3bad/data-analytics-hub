<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
      <VBox prefWidth="200.0" spacing="12.0">
         <children>
            <VBox prefWidth="200.0" spacing="4.0">
               <children>
                  <Label text="Username" />
                  <TextField fx:id="username" style="-fx-border-color: #00000022; -fx-background-color: #ffffff; -fx-border-radius: 2; -fx-border-width: 1;" />
               </children>
            </VBox>
            <VBox prefWidth="200.0" spacing="4.0">
               <children>
                  <Label text="Password" />
                  <PasswordField fx:id="password" style="-fx-border-color: #00000022; -fx-background-color: #ffffff; -fx-border-radius: 2; -fx-border-width: 1;" />
               </children>
            </VBox>
            <HBox prefWidth="130.0" spacing="12.0">
               <children>
                  <Button fx:id="loginBtn" maxWidth="1.7976931348623157E308" mnemonicParsing="false" style="-fx-background-color: #333; -fx-border-radius: 4; -fx-text-fill: white; -fx-border-color: #333;" text="Login" HBox.hgrow="ALWAYS" />
                  <Button fx:id="registerBtn" cancelButton="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" style="-fx-background-color: none; -fx-border-radius: 4; -fx-border-color: #333; -fx-text-fill: #333;" text="Sign Up" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <VBox fx:id="statusContainer" prefWidth="200.0" spacing="4.0">
                <children>
                </children>
            </VBox>
         </children>
      </VBox>
  </children>
</fx:root>
