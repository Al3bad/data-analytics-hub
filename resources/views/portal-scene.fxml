<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<fx:root type="AnchorPane" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <ScrollPane fitToHeight="true" fitToWidth="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <content>
         <VBox alignment="CENTER">
            <children>
               <Pane VBox.vgrow="ALWAYS" />
               <HBox alignment="CENTER" spacing="24.0">
                  <children>
                     <VBox alignment="CENTER" opacity="0.7">
                        <children>
                           <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                              <image>
                                 <Image url="@../images/logo.png" />
                              </image>
                           </ImageView>
                        </children>
                        <HBox.margin>
                           <Insets />
                        </HBox.margin>
                     </VBox>
                     <VBox fx:id="container" style="-fx-border-width: 1; -fx-border-radius: 2; -fx-border-color: #cccccc80;">
                        <padding>
                           <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
                        </padding>
                     </VBox>
                  </children>
                  <padding>
                     <Insets bottom="64.0" left="64.0" right="64.0" top="64.0" />
                  </padding>
               </HBox>
               <Pane VBox.vgrow="ALWAYS" />
            </children>
         </VBox>
      </content>
   </ScrollPane>
</fx:root>
