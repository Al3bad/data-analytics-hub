<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root type="VBox" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
      <VBox prefWidth="200.0" spacing="12.0">
         <children>
            <VBox prefWidth="200.0" spacing="4.0">
               <children>
                  <Label text="Username" />
                  <TextField fx:id="username" onKeyPressed="#onKeyPressed" styleClass="input" stylesheets="@../css/input.css" />
               </children>
            </VBox>
            <VBox prefWidth="200.0" spacing="4.0">
               <children>
                  <Label text="Password" />
                  <PasswordField fx:id="password" onKeyPressed="#onKeyPressed" styleClass="input" stylesheets="@../css/input.css" />
               </children>
            </VBox>
            <VBox fx:id="statusContainer" prefWidth="200.0" spacing="4.0">
                <children>
                </children>
            </VBox>
            <VBox spacing="8.0">
               <children>
                  <Button fx:id="primaryBtn" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMouseClicked="#onSubmitBtnClicked" style="-fx-background-color: #333; -fx-border-radius: 4; -fx-text-fill: white; -fx-border-color: #333;" text="Login" HBox.hgrow="ALWAYS" />
                  <Button fx:id="secondryBtn" cancelButton="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMouseClicked="#onCancelBtnClicked" style="-fx-background-color: none; -fx-border-radius: 4; -fx-border-color: #333; -fx-text-fill: #333;" text="Sign Up" HBox.hgrow="ALWAYS" />
               </children>
            </VBox>
         </children>
      </VBox>
  </children>
</fx:root>
