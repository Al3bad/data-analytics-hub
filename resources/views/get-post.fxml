<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root style="-fx-spacing: 32;" type="VBox" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox prefWidth="200.0" spacing="4.0">
         <children>
            <Label text="Post ID" />
            <HBox style="-fx-spacing: 16;" VBox.vgrow="ALWAYS">
               <children>
                  <TextField fx:id="postId" onKeyPressed="#onKeyPressed" styleClass="input" stylesheets="@../css/input.css" HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onMouseClicked="#onGetPostBtnClicked" stylesheets="@../css/button.css" text="Get Post">
                     <styleClass>
                        <String fx:value="button" />
                        <String fx:value="primary" />
                     </styleClass>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
        <VBox fx:id="container">
            <children>
            </children>
        </VBox>
   </children>
</fx:root>
